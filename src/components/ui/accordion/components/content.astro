---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'div'> & { value: string };

const { class: className, value, ...props } = Astro.props;
---

<div
  {...props}
  role="region"
  data-value={value}
  aria-hidden="true"
  class={twMerge(
    'group grid grid-rows-[1fr] border-b aria-hidden:grid-rows-[0fr]',
    'animate-in fade-in-0 motion-safe:transition-[grid-template-rows_200ms]',
    className,
  )}
>
  <div class="overflow-hidden"><div class="px-3 pb-4 pt-3"><slot /></div></div>
</div>
