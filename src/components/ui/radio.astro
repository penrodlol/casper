---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<HTMLAttributes<'input'>, 'type'>;

const { class: className, ...props } = Astro.props;
---

<input
  {...props}
  type="radio"
  class={twMerge(
    'peer relative h-4 w-4 shrink-0 cursor-pointer appearance-none',
    'rounded-full border border-primary before:absolute before:inset-[3px]',
    'before:rounded-full checked:before:bg-primary motion-safe:before:transition-colors',
    'focus-visible:outline-none focus-visible:ring-2 disabled:cursor-not-allowed disabled:opacity-50',
    className,
  )}
/>
