---
import { type HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'ul'>;

const { class: className, ...props } = Astro.props;
---

<ul
  {...props}
  class={twMerge(
    'absolute top-full z-50 hidden w-max min-w-full max-w-[30ch] pt-2',
    'group-focus-within:block group-hover:block',
    'animate-in motion-safe:fade-in-0 motion-safe:zoom-in-90',
    className,
  )}
>
  <div class="rounded border bg p-1"><slot /></div>
</ul>
