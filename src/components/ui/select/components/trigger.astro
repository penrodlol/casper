---
import type { HTMLAttributes } from 'astro/types';
import { ChevronsUpDown } from 'lucide-astro';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'button'> & { placeholder?: string };

const { class: className, placeholder, ...props } = Astro.props;
---

<button
  {...props}
  type="button"
  role="combobox"
  tabindex="0"
  aria-expanded="false"
  aria-haspopup="listbox"
  class={twMerge(
    'inline-flex h-8 w-full items-center justify-between gap-2 rounded border px-3 py-1',
    'focus:ring-1 focus-visible:outline-none focus-visible:ring-1',
    'disabled:cursor-not-allowed disabled:opacity-50',
    className,
  )}
>
  <span class="overflow-hidden truncate">{placeholder}</span>
  <ChevronsUpDown size={14} aria-hidden class="shrink-0 text-muted" />
</button>
