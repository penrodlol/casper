---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<HTMLAttributes<'ul'>, 'role'> & { offset?: number };

const { class: className, offset, ...props } = Astro.props;
---

<ul
  {...props}
  role="listbox"
  tabindex="-1"
  class={twMerge(
    'absolute inset-x-0 top-10 z-50 rounded border group-data-[select-open=false]:hidden',
    'animate-in motion-safe:fade-in motion-safe:slide-in-from-top-2',
    className,
  )}
>
  <slot />
</ul>
