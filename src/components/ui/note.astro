---
import type { HTMLAttributes } from 'astro/types';
import { Info } from 'lucide-astro';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'blockquote'>;

const { class: className, ...props } = Astro.props;
---

<blockquote
  {...props}
  class={twMerge('flex items-start gap-3 rounded bg-muted/60 px-6 py-3 text-muted', className)}
>
  <Info size={18} aria-hidden class="mt-0.5 shrink-0 opacity-80" />
  <slot />
</blockquote>
