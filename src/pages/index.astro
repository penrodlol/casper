---
import Avatar from '@/components/ui/avatar.astro';
import Badge from '@/components/ui/badge.astro';
import Button from '@/components/ui/button.astro';
import Checkbox from '@/components/ui/checkbox.astro';
import * as Dialog from '@/components/ui/dialog';
import * as Drawer from '@/components/ui/drawer';
import Input from '@/components/ui/input.astro';
import Label from '@/components/ui/label.astro';
import * as NavigationMenu from '@/components/ui/navigation-menu';
import Progress from '@/components/ui/progress.astro';
import RadialProgress from '@/components/ui/radial-progress.astro';
import Radio from '@/components/ui/radio.astro';
import Separator from '@/components/ui/separator.astro';
import Skeleton from '@/components/ui/skeleton.astro';
import Switch from '@/components/ui/switch.astro';
import * as Tabs from '@/components/ui/tabs';
import Textarea from '@/components/ui/textarea.astro';
import * as Toast from '@/components/ui/toast';
import Layout from '@/layouts/index.astro';
import {
  Archive,
  BadgeAlert,
  Bell,
  Check,
  Folder,
  Heart,
  Image,
  Inbox,
  Loader,
  LogOut,
  Mail,
  Menu,
  Power,
  Send,
  Settings,
  Tag,
  Trash,
  User,
} from 'lucide-astro';
---

<Layout>
  <div class="mx-auto mt-24 grid max-w-screen-xl grid-cols-[auto_1fr] items-start gap-40">
    <div class="sticky top-24 rounded border px-6 py-4">
      <h1 class="font-semibold tracking-widest">COMPONENTS</h1>
      <Separator class="mb-6 mt-2" />
      <ul class="flex flex-col gap-1">
        <Label><Checkbox /> Accordion</Label>
        <Label><Checkbox /> Alert Dialog</Label>
        <Label><Checkbox checked disabled /> Avatar</Label>
        <Label><Checkbox checked disabled /> Badge</Label>
        <Label><Checkbox checked disabled /> Button</Label>
        <Label><Checkbox /> Card</Label>
        <Label><Checkbox checked disabled /> Checkbox</Label>
        <Label><Checkbox checked disabled /> Dialog</Label>
        <Label><Checkbox checked disabled /> Drawer</Label>
        <Label><Checkbox /> Dropdown Menu</Label>
        <Label><Checkbox checked disabled /> Input</Label>
        <Label><Checkbox checked disabled /> Label</Label>
        <Label><Checkbox /> Menubar</Label>
        <Label><Checkbox checked disabled /> Navigation Menu</Label>
        <Label><Checkbox /> Popover</Label>
        <Label><Checkbox checked disabled /> Progress</Label>
        <Label><Checkbox checked disabled /> Radial Progress</Label>
        <Label><Checkbox checked disabled /> Radio Group</Label>
        <Label><Checkbox /> Select</Label>
        <Label><Checkbox checked disabled /> Separator</Label>
        <Label><Checkbox checked disabled /> Skeleton</Label>
        <Label><Checkbox /> Slider</Label>
        <Label><Checkbox checked disabled /> Switch</Label>
        <Label><Checkbox checked disabled /> Tabs</Label>
        <Label><Checkbox /> Table</Label>
        <Label><Checkbox checked disabled /> Textarea</Label>
        <Label><Checkbox /> Toast</Label>
        <Label><Checkbox /> Toggle Group</Label>
        <Label><Checkbox /> Tooltip</Label>
      </ul>
    </div>
    <div class="flex flex-col gap-20">
      <section><!-- Accordion --></section>
      <section><!-- Alert Dialog --></section>
      <section class="flex flex-col gap-4">
        <div class="flex items-center gap-6">
          <Avatar src="/src/assets/astro.png" alt="CP" size="sm" />
          <Avatar src="/src/assets/astro.png" alt="CP" size="md" />
          <Avatar src="/src/assets/astro.png" alt="CP" size="lg" />
        </div>
        <div class="flex items-center gap-6">
          <Avatar alt="CP" size="sm" />
          <Avatar alt="CP" size="md" />
          <Avatar alt="CP" size="lg" />
        </div>
      </section>
      <section class="flex flex-col gap-6">
        <div class="flex flex-wrap items-center gap-4">
          <Badge color="primary">Badge</Badge>
          <Badge color="secondary">Badge</Badge>
          <Badge color="outline">Badge</Badge>
          <Badge color="danger">Badge</Badge>
        </div>
        <div class="flex flex-wrap items-center gap-4">
          <Badge color="outline"><Check size={12} class="mr-1" /> Licensed</Badge>
          <Badge>99+</Badge>
        </div>
      </section>
      <section class="flex flex-col gap-6">
        <div class="flex flex-wrap items-center gap-4">
          <Button color="primary">Button</Button>
          <Button color="secondary">Button</Button>
          <Button color="outline">Button</Button>
          <Button color="ghost">Button</Button>
          <Button color="danger">Button</Button>
        </div>
        <div class="flex flex-wrap items-center gap-4">
          <Button size="sm">Button</Button>
          <Button size="md">Button</Button>
          <Button size="lg">Button</Button>
        </div>
        <div class="flex flex-wrap items-center gap-4">
          <Button color="primary" size="icon" aria-label="Heart"><Heart /></Button>
          <Button color="secondary" size="icon" aria-label="Bell"><Bell /></Button>
          <Button color="outline" size="icon" aria-label="Folder"><Folder /></Button>
          <Button color="ghost" size="icon" aria-label="Power"><Power /></Button>
          <Button color="danger" size="icon" aria-label="Trash"><Trash /></Button>
        </div>
        <div class="flex flex-wrap items-center gap-4">
          <Button><Mail size={16} class="mr-2" /> Login with email</Button>
          <Button disabled><Loader size={16} class="mr-2 animate-spin" /> Loading</Button>
        </div>
      </section>
      <section><!-- Card --></section>
      <section><!-- Checkbox --></section>
      <section>
        <Dialog.Root>
          <Button slot="dialog-trigger">Edit Profile</Button>
          <Dialog.Header>
            <Dialog.Title>Edit Profile</Dialog.Title>
            <Dialog.Description>
              Make changes to your profile here. Click save when you're done.
            </Dialog.Description>
          </Dialog.Header>
          <Dialog.Body>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Provident, modi nihil eius
            quaerat sapiente laboriosam veritatis a quisquam non velit repudiandae. Nisi id
            perferendis excepturi ipsa exercitationem labore veritatis at.
          </Dialog.Body>
          <Dialog.Footer>
            <Button slot="dialog-close" size="sm" color="outline">Cancel</Button>
            <Button slot="dialog-close" size="sm" value="true">Save</Button>
          </Dialog.Footer>
        </Dialog.Root>
      </section>
      <section class="flex gap-8">
        <Drawer.Root position="left">
          <Button slot="drawer-trigger" color="outline" size="icon"><Menu /></Button>
          <Drawer.Header class="border-b">
            <Avatar src="/src/assets/astro.png" alt="BS" size="lg" class="mb-4" />
            <Drawer.Title>Bob Smith</Drawer.Title>
            <Drawer.Description>bob_smith88@gmail.com</Drawer.Description>
          </Drawer.Header>
          <Drawer.Section class="border-b">
            <Drawer.Link href="/" active><Inbox size={18} class="mr-4" />Inbox</Drawer.Link>
            <Drawer.Link href="/"><Send size={18} class="mr-4" />Outbox</Drawer.Link>
            <Drawer.Link href="/"><Heart size={18} class="mr-4" />Favorites</Drawer.Link>
            <Drawer.Link href="/"><Archive size={18} class="mr-4" />Archive</Drawer.Link>
            <Drawer.Link href="/"><Trash size={18} class="mr-4" />Trash</Drawer.Link>
            <Drawer.Link href="/"><BadgeAlert size={18} class="mr-4" />Spam</Drawer.Link>
          </Drawer.Section>
          <Drawer.Section>
            <Drawer.SectionTitle>Labels</Drawer.SectionTitle>
            <Drawer.Link href="/"><Tag size={18} class="mr-4" />Family</Drawer.Link>
            <Drawer.Link href="/"><Tag size={18} class="mr-4" />Friends</Drawer.Link>
            <Drawer.Link href="/"><Tag size={18} class="mr-4" />Work</Drawer.Link>
          </Drawer.Section>
          <Drawer.Section class="mt-auto">
            <Drawer.Link href="/"><Settings size={18} class="mr-4" />Settings</Drawer.Link>
            <Drawer.Link href="/"><User size={18} class="mr-4" />Account</Drawer.Link>
            <Drawer.Link href="/"><LogOut size={18} class="mr-4" />Logout</Drawer.Link>
          </Drawer.Section>
        </Drawer.Root>
      </section>
      <section><!-- Dropdown Menu --></section>
      <section class="flex w-80 flex-col gap-6">
        <Input placeholder="Enter your name..." />
        <Input disabled placeholder="Enter your name..." />
        <Input type="file"><Image size={14} slot="prefix" /></Input>
        <Input placeholder="Enter current weight..."><span slot="suffix">kg</span></Input>
      </section>
      <section><!-- Label --></section>
      <section><!-- Menubar --></section>
      <section>
        <NavigationMenu.Root>
          <NavigationMenu.Dropdown>
            <NavigationMenu.DropdownTrigger>Getting Started</NavigationMenu.DropdownTrigger>
            <NavigationMenu.DropdownLinks>
              <NavigationMenu.Link href="/">
                <NavigationMenu.LinkTitle>Introduction</NavigationMenu.LinkTitle>
                <NavigationMenu.LinkDescription>
                  Re-usable components built using Radix UI and Tailwind CSS.
                </NavigationMenu.LinkDescription>
              </NavigationMenu.Link>
              <NavigationMenu.Link href="/">
                <NavigationMenu.LinkTitle>Installation</NavigationMenu.LinkTitle>
                <NavigationMenu.LinkDescription>
                  How to install dependencies and structure your app.
                </NavigationMenu.LinkDescription>
              </NavigationMenu.Link>
              <NavigationMenu.Link href="/">
                <NavigationMenu.LinkTitle>Typography</NavigationMenu.LinkTitle>
                <NavigationMenu.LinkDescription>
                  Styles for headings, paragraphs, lists...etc.
                </NavigationMenu.LinkDescription>
              </NavigationMenu.Link>
            </NavigationMenu.DropdownLinks>
          </NavigationMenu.Dropdown>
          <NavigationMenu.Dropdown>
            <NavigationMenu.DropdownTrigger>Components</NavigationMenu.DropdownTrigger>
            <NavigationMenu.DropdownLinks>
              <NavigationMenu.Link href="/">
                <NavigationMenu.LinkTitle>Alert Dialog</NavigationMenu.LinkTitle>
                <NavigationMenu.LinkDescription>
                  A modal dialog that interrupts the user with important content and expects a
                  response.
                </NavigationMenu.LinkDescription>
              </NavigationMenu.Link>
              <NavigationMenu.Link href="/">
                <NavigationMenu.LinkTitle>Hover Card</NavigationMenu.LinkTitle>
                <NavigationMenu.LinkDescription>
                  For sighted users to preview content available behind a link.
                </NavigationMenu.LinkDescription>
              </NavigationMenu.Link>
              <NavigationMenu.Link href="/">
                <NavigationMenu.LinkTitle>Progress</NavigationMenu.LinkTitle>
                <NavigationMenu.LinkDescription>
                  Displays an indicator showing the completion progress of a task, typically
                  displayed as a progress bar.
                </NavigationMenu.LinkDescription>
              </NavigationMenu.Link>
            </NavigationMenu.DropdownLinks>
          </NavigationMenu.Dropdown>
          <NavigationMenu.Link href="/">Documentation</NavigationMenu.Link>
        </NavigationMenu.Root>
      </section>
      <section><!-- Popover --></section>
      <section class="flex items-end gap-6">
        <RadialProgress size="sm" value={0} />
        <RadialProgress size="sm" value={20} />
        <RadialProgress size="md" value={40} />
        <RadialProgress size="md" value={60} />
        <RadialProgress size="lg" value={80} />
        <RadialProgress size="lg" value={100} />
      </section>
      <section class="w-80">
        <Progress value="40" max="100" />
      </section>
      <section class="flex flex-col gap-8">
        <fieldset class="flex gap-4">
          <Label><Radio name="fruit-horizontal" /> Apple</Label>
          <Label><Radio name="fruit-horizontal" /> Banana</Label>
          <Label><Radio name="fruit-horizontal" /> Orange</Label>
        </fieldset>
        <fieldset class="flex flex-col gap-1">
          <Label><Radio name="fruit-vertical" /> Apple</Label>
          <Label><Radio name="fruit-vertical" /> Banana</Label>
          <Label><Radio name="fruit-vertical" /> Orange</Label>
        </fieldset>
      </section>
      <section><!-- Select --></section>
      <section><!-- Separator --></section>
      <section class="flex items-center gap-4">
        <Skeleton class="size-12 rounded-full" />
        <div class="flex flex-col gap-2">
          <Skeleton class="size-4 w-64" />
          <Skeleton class="size-4 w-64" />
        </div>
      </section>
      <section><!-- Slider --></section>
      <section>
        <Label><Switch /> Airplane mode</Label>
      </section>
      <section class="w-[500px]">
        <Tabs.Root>
          <Tabs.TabList>
            <Tabs.Tab value="orange" selected>Orange</Tabs.Tab>
            <Tabs.Tab value="apple">Apple</Tabs.Tab>
            <Tabs.Tab value="banana">Banana</Tabs.Tab>
          </Tabs.TabList>
          <Tabs.TabPanel value="orange" selected>
            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Illo fugit ab vitae ad est
            sequi incidunt, quisquam laborum atque aliquam esse dolorem quaerat deserunt delectus,
            totam sint amet aspernatur! Eos.
          </Tabs.TabPanel>
          <Tabs.TabPanel value="apple">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nemo doloribus atque
            repellendus ex velit, iusto quo fugit doloremque. Beatae culpa ut rem sunt nobis
            pariatur dolores. Iure voluptatum ullam repudiandae!
          </Tabs.TabPanel>
          <Tabs.TabPanel value="banana">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Vero deleniti necessitatibus
            sint placeat aliquam rerum cupiditate commodi excepturi fugiat, est sed delectus eos
            quas praesentium explicabo suscipit alias voluptate fuga.
          </Tabs.TabPanel>
        </Tabs.Root>
      </section>
      <section><!-- Table --></section>
      <section class="flex w-80 flex-col gap-6">
        <Textarea placeholder="Describe your favorite fruit..." />
        <Textarea placeholder="Describe your favorite fruit..." disabled />
      </section>
      <section class="flex gap-8">
        <Toast.Root>
          <Button slot="toast-trigger" color="outline">Add to calendar</Button>
          <Toast.Title>Date Added to Calendar</Toast.Title>
          <Toast.Description>
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
          </Toast.Description>
          <Toast.Actions>
            <Button slot="toast-close" color="ghost" size="sm">Dismiss</Button>
            <Button slot="toast-close" color="primary" size="sm">Undo</Button>
          </Toast.Actions>
        </Toast.Root>
        <Toast.Root color="success">
          <Button slot="toast-trigger">Book Trip</Button>
          <Toast.Title>Success</Toast.Title>
          <Toast.Description>You have successfully booked your trip to the moon.</Toast.Description>
        </Toast.Root>
        <Toast.Root color="warning">
          <Button slot="toast-trigger">Book Trip</Button>
          <Toast.Title>Warning</Toast.Title>
          <Toast.Description>Invalid trip location. Please try again.</Toast.Description>
        </Toast.Root>
        <Toast.Root color="danger">
          <Button slot="toast-trigger">Book Trip</Button>
          <Toast.Title>Error</Toast.Title>
          <Toast.Description>Trip to the moon could not be booked.</Toast.Description>
        </Toast.Root>
      </section>
      <section><!-- Toggle Group --></section>
      <section><!-- Tooltip --></section>
    </div>
  </div>
</Layout>
